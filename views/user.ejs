<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>User Details</title>
  <style>
 body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
      background-color: #f4f4f4;
      color: #333;
      background-image: url("https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRh559sOAnZ3lapv2-2nZ7b_SWhDb6j3NhO70OOk6n-CQ&s");
      background-size:cover ;
      background-position: center;
    }

    .navbar {
    background-color: #333;
    padding: 15px;
    display:flex;
    justify-content: space-between;
    align-items: center;
    color: white;
    position: fixed;
    overflow: hidden;
    top: 0;
    width:100%;
    z-index: 2;
}

.navbar-logo {
    display: flex;
    align-items: center;
}

.logo-text {
    font-size: 24px;
    /* Adjust the font size as needed */
    font-weight: bold;
    margin-right: 30px;
}

.login-btn {
    background-color: #4CAF50;
    /* Green color, you can customize */
    color: white;
    padding: 10px 15px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    margin-right: 30px;
}
    .user-details {
      max-width: 800px;
      margin: 20px auto;
      background-color: #fff;
      border-radius: 8px;
      margin-top: 150px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      padding: 30px;
    }

    h2 {
      text-align: center;
      margin-bottom: 20px;
      color: #0066cc;
    }

    .user-info {
      border-bottom: 1px solid #ccc;
      padding-bottom: 20px;
      margin-bottom: 20px;
    }

    .user-info p {
      margin: 5px 0;
    }

    .visited-hospitals {
      padding-bottom: 20px;
    }

    .visited-hospitals h3 {
      margin-bottom: 15px;
      color: #009933;
    }

    .visited-hospitals ul {
      list-style: none;
      padding: 0;
      margin: 0;
    }

    .visited-hospitals ul li {
      margin-bottom: 8px;
    }
    .more-info {
      display: none;
      margin-top: 15px;
    }

    .more-info.active {
      display: block;
    }

    .more-info img {
      max-width: 100%;
      margin-top: 10px;
    }

    .more-info button {
      background-color: #0066cc;
      color: #fff;
      border: none;
      padding: 8px 12px;
      cursor: pointer;
    }
    .footer {
            background-color: rgba(0, 0, 0, 0.7);
            color: #fff;
            padding: 20px;
            text-align: center;
            position: fixed;
            bottom: 0;
            left: 0;
            width: 100%;
        }

        .footer p {
            margin: 0;
        }
  </style>
</head>
<body>
  <div class="navbar">
    <div class="navbar-logo">
      <span class="logo-text">UHI (Unified Health Interface)</span>
    </div>
    <button class="login-btn" onclick="gotologin()">Logout</button>
  </div>

  <div class="user-details">
    <h2>User Details</h2>
    <div class="user-info">
      <p><strong>Name:</strong> John Doe</p>
      <p><strong>Date of Birth:</strong> 1990-05-15</p>
      <p><strong>Blood Group:</strong> AB+</p>
      <!-- Add other user information here -->
    </div>
    <div class="visited-hospitals">
        <h3>Visited Hospitals</h3>
        <ul>
          <li>
            Hospital A - 26/09/2023
            <div class="more-info">
              <p><strong>Doctor's Name:</strong> <span class="doctor-name">Dr. Raghu</span></p>
              <p><strong>Phone Number:</strong> <span class="phone-number">7887787888</span></p>
              <img src="images/preception.jpg" alt="Prescription">
            </div>
            <button onclick="toggleMoreInfo(this)">Show More Info</button>
          </li>
          <!-- Add similar markup for other visited hospitals and their details -->
        </ul>
        <ul>
            <li>
              Hospital B - 08/12/2023               
              <div class="more-info">
                <p><strong>Doctor's Name:</strong> <span class="doctor-name">Dr. Smith</span></p>
                <p><strong>Phone Number:</strong> <span class="phone-number">123-456-7890</span></p>
                <img src="images/preception.jpg" alt="Prescription">
              </div>
              <button onclick="toggleMoreInfo(this)">Show More Info</button>
            </li>
            <!-- Add similar markup for other visited hospitals and their details -->
          </ul>
      </div>
    </div>
    <div class="footer">
      <p>&copy; 2023 Unified Health Interface. All rights reserved.</p>
    </div>
    <script>
        function toggleMoreInfo(button) {
          const moreInfo = button.previousElementSibling; // Get the div with class "more-info"
          moreInfo.classList.toggle('active');
          button.textContent = moreInfo.classList.contains('active') ? 'Hide More Info' : 'Show More Info';
    
          const doctorName = moreInfo.querySelector('.doctor-name');
          const phoneNumber = moreInfo.querySelector('.phone-number');
          if (moreInfo.classList.contains('active')) {
            doctorName.textContent = "Dr. John"; // Replace with actual doctor's name from your data
            phoneNumber.textContent = "987-654-3210"; // Replace with actual phone number from your data
          } else {
            doctorName.textContent = ""; // Reset to empty when hiding
            phoneNumber.textContent = ""; // Reset to empty when hiding
          }
        }
      </script>
      <script>
        function gotologin() {
    window.location.href = '/login';
  }
    </script>
</body>
</html>
